{% extends 'base.html.twig' %}

{% block body %}

    <div class="container py-3">
        <header>
            <div class="d-flex flex-column flex-md-row align-items-center pb-3 mb-4 border-bottom">
                <a href="/" class="d-flex align-items-center text-dark text-decoration-none">
                    <span class="fs-4">Super paczka</span>
                </a>

                <nav class="d-inline-flex mt-2 mt-md-0 ms-md-auto">
                    <a class="me-3 py-2 text-dark text-decoration-none" href="#">O nas</a>
                    <a class="me-3 py-2 text-dark text-decoration-none" href="#">Kurierzy</a>
                    <a class="me-3 py-2 text-dark text-decoration-none" href="#">Pomoc</a>
                    <a class="py-2 text-dark text-decoration-none" href="#">Cennik</a>
                </nav>
            </div>

            <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
                <h1 class="display-4 fw-normal">Cennik</h1>
                <p class="fs-5 text-muted">It is a long established fact that a reader will be distracted by the
                    readable content of a page when looking at its layout.</p>
            </div>
        </header>

        <main>
            <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
                {% for parcelType in parcelTypes %}
                    <div class="col">
                        <div class="card mb-4 rounded-3 shadow-sm">
                            <div class="card-header py-3">
                                <h4 class="my-0 fw-normal">{{ parcelType.name }}</h4>
                            </div>
                            <div class="card-body">
                                <h1 class="card-title pricing-card-title">8<small class="text-muted fw-light">zł</small>
                                </h1>
                                <ul class="list-unstyled mt-3 mb-4">
                                    <li>Do {{ parcelType.realizationDays }} dni roboczych</li>
                                    <li>Ubezpieczenie {{ parcelType.insuranceAmount }}zł</li>
                                    <li>Max {{ parcelType.maxWeight }}kg</li>
                                </ul>
                                <a
                                        type="button"
                                        class="w-100 btn btn-lg btn-outline-primary"
                                        href="{{ url('parcel.order', {type: parcelType.id }) }}"
                                >Wybierz</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <h2 class="display-6 text-center mb-4">Prównaj paczki</h2>

            <div class="table-responsive">
                <table class="table text-center">
                    <thead>
                    <tr>
                        <th style="width: 34%;"></th>
                        <th style="width: 22%;">Czas dostawy</th>
                        <th style="width: 22%;">Waga</th>
                        <th style="width: 22%;">Ubezpiecznie</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for parcelType in parcelTypes %}
                        <tr>
                            <th scope="row" class="text-start">
                                {{ parcelType.name }}
                            </th>
                            <td class="text-muted">
                                Do {{ parcelType.realizationDays }} dni
                            </td>
                            <td class="text-muted">
                                Do {{ parcelType.maxWeight }}kg
                            </td>
                            <td class="text-muted">
                                {{ parcelType.insuranceAmount }}zł
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </main>

        <footer class="pt-4 my-md-5 pt-md-5 border-top">
            <div class="row">
                <div class="col-12 col-md">
                    Super paczka
                    <small class="d-block mb-3 text-muted">&copy; 2021</small>
                </div>
                <div class="col-6 col-md">
                    <h5>Paczki</h5>
                    <ul class="list-unstyled text-small">
                        {% for parcelType in parcelTypes %}
                            <li class="mb-1">
                                <a class="link-secondary text-decoration-none">{{ parcelType.name }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-6 col-md">
                    <h5>Kurierzy</h5>
                    <ul class="list-unstyled text-small">
                        {% for courier in couriers %}
                            <li class="mb-1">
                                <a class="link-secondary text-decoration-none" href="{{ courier.www }}" target="_blank">
                                    {{ courier.name }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-6 col-md">
                    <h5>Pomoc</h5>
                    <ul class="list-unstyled text-small">
                        <li class="mb-1"><a class="link-secondary text-decoration-none" href="#">Jak zamówić paczkę</a>
                        </li>
                        <li class="mb-1"><a class="link-secondary text-decoration-none" href="#">Co muszę wiedzieć</a>
                        </li>
                        <li class="mb-1"><a class="link-secondary text-decoration-none" href="#">Jak założyć konto</a>
                        </li>
                    </ul>
                </div>
            </div>
        </footer>
    </div>


{% endblock body %}